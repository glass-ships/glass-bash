#!/usr/bin/env bash

# general

alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

alias env='env | sort'
alias grep='grep -n'
alias sfind='sudo find / -name '$@''
alias howbig='du -csh '$@''

alias pls='sudo -E '
alias wat='whoami && hostname'

# git 
alias gs='git status'

# ssh
#alias ssh='ssh -X'
alias sshpipe='ssh -L 8888:localhost:8888'