#!/bin/bash

# general terminal aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias lesss='less -RSI +G'
alias colorize="perl $PWD/colorize/colorize"
alias env='env | sort'

# personal terminal shortcuts
alias wat='whoami && hostname'
alias sfind='sudo find / -name '$@''
alias sz='sudo zypper '$@''
alias gs='git status'

# multi-media shortcuts
alias rpa='pulseaudio --kill && pulseaudio --start'

# ssh shortcuts
alias nero='ssh -X josh@nero'
alias nerotunnel='ssh -L 8888:localhost:8888 josh@nero'
alias galba='ssh josh@galba'
alias galbatunnel='ssh -L 8890:localhost:8890 josh@galba'
